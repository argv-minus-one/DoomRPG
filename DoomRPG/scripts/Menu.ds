            if (*Stats[i] < Player.StatCap)
                HudMessage("%s: %ld/%ld (%d)\n", StatNames[i], *StatXP[i], StatTable[*Stats[i]], *Stats[i], HUDMSG_PLAIN, 0, StatColors[i], 40.1, 32.0 + (i * 44.0), 0.05)
