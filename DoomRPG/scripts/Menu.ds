        Y -= 4.0;
        Info = StrParam("\cj%d\n\cjSec\n", 15 - Player.Turret.Upgrade[TU_AMMO_NANOGEN]);
        break;
    case TU_WEAPON_SELFDESTRUCT:
        Info = "\cgGo";
        break;
    case TU_ARMOR_PLATING:
