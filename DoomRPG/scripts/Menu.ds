                Color = StatColors[i];
            
            // Descriptions
            SetFont("SMALLFONT");
            HudMessage("%s\n", Description, HUDMSG_PLAIN, 0, Color, 40.1, 44.0 + (i * 44.0), 0.05);        
        };
    };
    
    // Team Page
    if (Player.StatPage == STATPAGE_TEAM)
    {
