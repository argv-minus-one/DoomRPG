            else
                PrintSpriteAlpha(StrParam("STAT%d\n", i + 1), 0, 16.1, 56.1 + (i * 44.0), 0.05, 0.5);
            
            // Build description string
            for (int j = 0; PerkInfo[i][j] != nullptr; j++)
