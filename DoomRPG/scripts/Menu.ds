        HudMessage("Rank: %ld / %ld\n", PlayerPtr->Rank, PlayerPtr->RankNext, HUDMSG_PLAIN, 0, CR_YELLOW, 208.1, 92.0, 0.05);
        if (PlayerPtr->RankLevel > 0)
            HudMessage("Payout: %d C (%s) [%d%%]\n",
