        Y -= 4.0;
        Info = StrParam("\cd%d\n\cd%d\n", Player.Turret.RailAmmo, Player.Turret.RailAmmoMax);
        break;
    case TU_AMMO_AUTOLOADER:
        if (Player.Turret.Autoload)
            Info = "\cdON"
        else
            Info = "\caOFF";
        break;
